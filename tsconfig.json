{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "outDir": "./js",
    "sourceMap": true,
    "baseUrl": ".",
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    "@tsconfig/recommended/tsconfig.json"
  ],
  "include": ["packages/**/*"]
}
